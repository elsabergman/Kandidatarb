        <TextView
            android:id="@+id/my_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:theme="@style/header2"
            android:textColor="@color/darkest_blue"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="120dp"/>

        <Button
            android:id="@+id/edit_my_profile_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:layout_toRightOf="@+id/my_profile"
            android:layout_marginTop="120dp"
            android:textSize="10sp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:onClick="editInfo"
            />

        <Button
            android:id="@+id/display_my_profile_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_toRightOf="@+id/edit_my_profile_button"
            android:layout_marginTop="120dp"
            android:textSize="10sp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:onClick="saveInfo"

            />



        <View
            android:id="@+id/background_myprofile"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background ="@drawable/border"
            android:layout_below="@id/my_profile"
            android:alpha="0.3"
            android:elevation="@dimen/activity_vertical_margin"



            />


        <TextView
            android:id="@+id/organization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/organzation"
            android:textSize="20sp"
            android:textColor="@color/darkest_blue"
            android:layout_below="@id/my_profile"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:elevation="@dimen/activity_vertical_margin"
            />

        <EditText
            android:id="@+id/organization_nameInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Type here"
            android:textSize="20sp"
            android:textColor="@color/darkest_blue"
            android:layout_toRightOf="@id/organization"
            android:layout_below="@id/my_profile"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:elevation="@dimen/activity_vertical_margin"
            android:focusable="false"

        />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Adress:"
            android:textSize="20sp"
            android:textColor="@color/darkest_blue"
            android:layout_below="@id/organization"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:elevation="@dimen/activity_vertical_margin"

            />
        <EditText
            android:id="@+id/organization_emailInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Type here"
            android:textSize="20dp"
            android:textColor="@color/darkest_blue"
            android:layout_toRightOf="@id/organization"
            android:layout_below="@id/organization"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:elevation="@dimen/activity_vertical_margin"
            android:focusable="false"

            />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:textSize="20sp"
            android:textColor="@color/darkest_blue"
            android:layout_below="@id/email"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:elevation="@dimen/activity_vertical_margin"

            />
        <EditText
            android:id="@+id/organization_username_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Type here"
            android:textSize="20sp"
            android:textColor="@color/darkest_blue"
            android:layout_toRightOf="@id/organization"
            android:layout_below="@id/email"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:elevation="@dimen/activity_vertical_margin"
            android:focusable="false"

            />

        <TextView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:textSize="20sp"
            android:textColor="@color/darkest_blue"
            android:layout_below="@id/username"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:elevation="@dimen/activity_vertical_margin"

            />
        <EditText
            android:id="@+id/organization_password_input1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/darkest_blue"
            android:layout_toRightOf="@id/organization"
            android:layout_below="@id/username"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:elevation="@dimen/activity_vertical_margin"
            android:focusable="false"
            android:hint="Type here"
            android:inputType="textPassword"
            />

        <TextView
            android:id="@+id/password2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:textSize="20sp"
            android:textColor="@color/darkest_blue"
            android:layout_below="@id/password"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:elevation="@dimen/activity_vertical_margin"

            />

        <EditText
            android:id="@+id/organization_password_input2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/darkest_blue"
            android:layout_toRightOf="@id/organization"
            android:layout_below="@id/password"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:elevation="@dimen/activity_vertical_margin"
            android:focusable="false"
            android:hint="Type here"
            android:inputType="textPassword"

            />



        <TextView
            android:id="@+id/campus_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Campus settings"
            android:theme="@style/header2"
            android:textColor="@color/darkest_blue"
            android:layout_below="@id/background_myprofile"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"



            />
        <View
            android:id="@+id/background_campus_settings"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background ="@drawable/border"
            android:layout_below="@id/campus_settings"
            android:alpha="0.3"
            android:elevation="@dimen/activity_vertical_margin"

            />



        <TextView
            android:id="@+id/default_campus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Default Campus"
            android:textSize="20sp"
            android:textColor="@color/darkest_blue"
            android:layout_below="@id/campus_settings"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:elevation="@dimen/activity_vertical_margin"


            />

        <Spinner
            android:id="@+id/campusesSpinnerSettings"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:entries="@array/campuses_array"
            android:background="@android:drawable/btn_dropdown"
            android:layout_alignRight="@id/background_campus_settings"
            android:layout_below="@id/campus_settings"
            android:layout_marginRight="5dp"
            android:layout_marginTop="7dp"
            android:elevation="@dimen/activity_vertical_margin"
            />

      <TextView
          android:id="@+id/default_university"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Default University"
          android:textSize="20sp"
          android:textColor="@color/darkest_blue"
          android:layout_below="@id/default_campus"
          android:layout_marginLeft="15dp"
          android:layout_marginTop="15dp"
          android:elevation="@dimen/activity_vertical_margin"


          />

      <Spinner
          android:id="@+id/universitySpinnerSettings"
          android:layout_width="160dp"
          android:layout_height="40dp"
          android:layout_marginBottom="20dp"
          android:entries="@array/settings_university_selections"
          android:background="@android:drawable/btn_dropdown"
          android:layout_alignRight="@id/background_campus_settings"
          android:layout_below="@id/default_campus"
          android:layout_marginRight="5dp"
          android:layout_marginTop="7dp"
          android:elevation="@dimen/activity_vertical_margin"
          />


       <!-- <TextView
            android:id="@+id/default_campus_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ångström/ITC"
            android:textSize="20sp"
            android:textColor="@color/darkest_blue"
            android:layout_toRightOf="@id/default_campus"
            android:layout_below="@id/campus_settings"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:elevation="@dimen/activity_vertical_margin"

            />  -->

        <TextView
            android:id="@+id/other_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other settings"
            android:theme="@style/header2"
            android:textColor="@color/darkest_blue"
            android:layout_below="@id/background_campus_settings"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"


            />

        <View
            android:background ="@drawable/border"
            android:id="@+id/background_other_settings"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="7dp"
            android:layout_below="@id/other_settings"
            android:alpha="0.3"
            android:elevation="@dimen/activity_vertical_margin"

            />
        <TextView
            android:id="@+id/notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textSize="20sp"
            android:textColor="@color/darkest_blue"
            android:layout_below="@id/other_settings"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:elevation="@dimen/activity_vertical_margin"

            />



        <Switch
            android:id="@+id/mySwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:textColor="@color/darkest_blue"
            android:layout_below="@id/other_settings"
            android:layout_toRightOf="@id/other_settings"
            android:text="Switch for notification"
            android:elevation="@dimen/activity_vertical_margin"/>

        <TextView
            android:id="@+id/switchStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/notifications"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:elevation="@dimen/activity_vertical_margin"/>

        <TextView
            android:id="@+id/language_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language:"
            android:textSize="20sp"
            android:textColor="@color/darkest_blue"
            android:layout_below="@id/switchStatus"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:elevation="@dimen/activity_vertical_margin"
            />

        <Spinner
            android:id="@+id/languageSpinnerSettings"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:entries="@array/settings_language"
            android:background="@android:drawable/btn_dropdown"
            android:layout_toRightOf="@id/language_settings"
            android:layout_below="@id/switchStatus"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="2dp"
            android:elevation="@dimen/activity_vertical_margin"
            />


            </RelativeLayout>
        </ScrollView>


<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".org_settings"
    >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello STS-sektionen!"
            android:theme="@style/org_header"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"

            />



        <TextView
            android:id="@+id/settings_org"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:theme="@style/header1"
            android:textColor="#fff"
            android:layout_below="@id/welcome"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"

            />


        <TextView
            android:id="@+id/my_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:theme="@style/header2"
            android:textColor="@color/black"
            android:layout_below="@id/settings_org"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"


            />


        <View
            android:id="@+id/background_myprofile"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/background_transparent"
            android:layout_below="@id/my_profile"

            />

        <TextView
            android:id="@+id/organization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/organzation"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_below="@id/my_profile"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/organization_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STS-sektionen"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/organization"
            android:layout_below="@id/my_profile"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"

            />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Adress:"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_below="@id/organization"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"

            />
        <TextView
            android:id="@+id/organization_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sts-ordf@utn.se"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/organization"
            android:layout_below="@id/organization"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"

            />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_below="@id/email"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"

            />
        <TextView
            android:id="@+id/organization_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="stssektionen"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/organization"
            android:layout_below="@id/email"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"

            />

        <TextView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_below="@id/username"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"

            />
        <TextView
            android:id="@+id/organization_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="************"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/organization"
            android:layout_below="@id/username"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"

            />



        <TextView
            android:id="@+id/campus_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Campus settings"
            android:theme="@style/header2"
            android:textColor="@color/black"
            android:layout_below="@id/password"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"


            />
        <View
            android:id="@+id/background_campus_settings"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/background_transparent"
            android:layout_below="@id/campus_settings"

            />



        <TextView
            android:id="@+id/default_campus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Default Campus"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_below="@id/campus_settings"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"

            />

        <TextView
            android:id="@+id/default_campus_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ångström/ITC"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/default_campus"
            android:layout_below="@id/campus_settings"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"

            />

        <TextView
            android:id="@+id/other_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other settings"
            android:theme="@style/header2"
            android:textColor="@color/black"
            android:layout_below="@id/default_campus"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"


            />

        <View
            android:id="@+id/background_other_settings"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/background_transparent"
            android:layout_below="@id/other_settings"

            />
        <TextView
            android:id="@+id/notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_below="@id/other_settings"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"

            />

        <Switch
            android:id="@+id/mySwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/other_settings"
            android:layout_toRightOf="@id/other_settings"
            android:text="Switch for notification" />

        <TextView
            android:id="@+id/switchStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/notifications"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/language_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language:"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_below="@id/switchStatus"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/language_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/language_settings"
            android:layout_below="@id/switchStatus"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp" />

        <!-- spinning weels for settings -->

        <ImageView
            android:id="@+id/profile_settings_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/settings_toggle"
            android:adjustViewBounds="true"
            android:layout_below="@id/settings_org"
            android:layout_toRightOf="@id/default_campus_choice"
            android:maxWidth="35dp"
            android:maxHeight="35dp"

            />

        <ImageView
            android:id="@+id/campus_settings_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/settings_toggle"
            android:adjustViewBounds="true"
            android:layout_below="@id/organization_password"
            android:layout_toRightOf="@id/default_campus_choice"
            android:layout_marginTop="15dp"
            android:maxWidth="35dp"
            android:maxHeight="35dp"

            />
        <ImageView
            android:id="@+id/language_settings_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/settings_toggle"
            android:adjustViewBounds="true"
            android:layout_below="@id/default_campus_choice"
            android:layout_toRightOf="@id/default_campus_choice"
            android:maxWidth="35dp"
            android:maxHeight="35dp"
            android:layout_marginTop="10dp"

            />




    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello STS-sektionen!"
            android:theme="@style/org_header"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"

            />
        <ImageView
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/searchen"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="true"
            android:maxWidth="35dp"
            android:maxHeight="35dp"
            />



        <TextView
            android:id="@+id/add_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:theme="@style/header1"
            android:textColor="#fff"
            android:layout_below="@id/welcome"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"

            />


        <TextView
            android:id="@+id/my_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:theme="@style/header2"
            android:textColor="black"
            android:layout_below="@id/add_event"
            android:layout_centerLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/white"

            />

        <TextView
            android:id="@+id/organization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organzation:"
            android:textSize="20dp"
            android:textColor="black"
            android:layout_below="@id/my_profile"
            android:layout_centerLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"

            />
        <TextView
            android:id="@+id/organization_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STS-sektionen"
            android:textSize="20dp"
            android:textColor="black"
            android:layout_toRightOf="@id/organization"
            android:layout_below="@id/my_profile"
            android:layout_centerLeft="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"

            />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Adress:"
            android:textSize="20dp"
            android:textColor="black"
            android:layout_below="@id/organization"
            android:layout_centerLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"

            />
        <TextView
            android:id="@+id/organization_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sts-ordf@utn.se"
            android:textSize="20dp"
            android:textColor="black"
            android:layout_toRightOf="@id/organization"
            android:layout_below="@id/organization"
            android:layout_centerLeft="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"

            />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
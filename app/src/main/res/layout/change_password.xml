<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/changePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you want to change your password?"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#fff"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/description_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Please fill in your information here:"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_below="@id/changePassword"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        />

    <EditText android:id="@+id/input_oldPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Old password"
        android:layout_below="@id/description_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:maxLines="1"
        android:inputType="textPassword"
        />

    <EditText android:id="@+id/input_newPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="New password"
        android:layout_below="@id/input_oldPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:maxLines="1"
        />

    <Button
        android:id="@+id/savePassword"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:text="SAVE"
        android:layout_below="@+id/input_newPassword"
        android:textColor="#fff"
        android:background="#10898D"
        android:onClick="onClick"
        android:layout_margin="20dp"
        />


        <TextView
            android:id="@+id/forgotPwd"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Forgot Password?"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/savePassword"
            android:layout_margin="10dp"

            />




</RelativeLayout>
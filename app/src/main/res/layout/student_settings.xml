            <View
                android:id="@+id/background_myprofile"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:background ="@drawable/border"
                android:layout_below="@id/my_profile"
                android:alpha="0.3"
                android:elevation="@dimen/activity_vertical_margin"



                />


            <Switch
                android:id="@+id/editSaveSwitchStudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textColor="@color/darkest_blue"
                android:text="Edit"
                android:layout_alignRight="@id/background_myprofile"
                android:layout_alignTop="@id/background_myprofile"

                />

            <TextView
                android:id="@+id/firstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First name:"
                android:textSize="20sp"
                android:textColor="@color/darkest_blue"
                android:layout_below="@id/my_profile"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:elevation="@dimen/activity_vertical_margin"
                />

            <EditText
                android:id="@+id/firstName_Input_student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="First name"
                android:textSize="20sp"
                android:textColor="@color/darkest_blue"
                android:layout_toRightOf="@id/firstName"
                android:layout_below="@id/my_profile"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="15dp"
                android:elevation="@dimen/activity_vertical_margin"
                android:focusable="false"
                android:background="@android:color/transparent"

                />

            <TextView
                android:id="@+id/lastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last name:"
                android:textSize="20sp"
                android:textColor="@color/darkest_blue"
                android:layout_below="@id/firstName"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:elevation="@dimen/activity_vertical_margin"
                />

            <EditText
                android:id="@+id/lastName_Input_student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Last name"
                android:textSize="20sp"
                android:textColor="@color/darkest_blue"
                android:layout_toRightOf="@id/firstName"
                android:layout_below="@id/firstName"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="15dp"
                android:elevation="@dimen/activity_vertical_margin"
                android:focusable="false"
                android:background="@android:color/transparent"

                />


            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Adress:"
                android:textSize="20sp"
                android:textColor="@color/darkest_blue"
                android:layout_below="@id/lastName"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:elevation="@dimen/activity_vertical_margin"

                />
            <EditText
                android:id="@+id/organization_emailInput_student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textSize="20dp"
                android:textColor="@color/darkest_blue"
                android:layout_toRightOf="@id/firstName"
                android:layout_below="@id/lastName"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="15dp"
                android:elevation="@dimen/activity_vertical_margin"
                android:focusable="false"
                android:background="@android:color/transparent"

                />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username:"
                android:textSize="20sp"
                android:textColor="@color/darkest_blue"
                android:layout_below="@id/email"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:elevation="@dimen/activity_vertical_margin"

                />
            <EditText
                android:id="@+id/organization_username_input_student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:textSize="20sp"
                android:textColor="@color/darkest_blue"
                android:layout_toRightOf="@id/firstName"
                android:layout_below="@id/email"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="15dp"
                android:elevation="@dimen/activity_vertical_margin"
                android:focusable="false"
                android:background="@android:color/transparent"

                />

            <Button
                android:id="@+id/change_password_button_student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textSize="10sp"
                android:textColor="@color/darkest_blue"
                android:layout_below="@id/username"
                android:layout_toRightOf="@+id/my_profile"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="15dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:maxWidth="100dp"
                android:onClick="editPasswordStud"
                />


            <TextView
                android:id="@+id/campus_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Campus settings"
                android:theme="@style/header2"

                android:textColor="@color/white"
                android:layout_below="@id/background_myprofile"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"



                />
            <View
                android:id="@+id/background_campus_settings"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:background ="@drawable/border"
                android:layout_below="@id/campus_settings"
                android:alpha="0.3"
                android:elevation="@dimen/activity_vertical_margin"

                />



            <TextView
                android:id="@+id/default_campus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default University"
                android:textSize="20sp"
                android:textColor="@color/darkest_blue"
                android:layout_below="@id/campus_settings"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:elevation="@dimen/activity_vertical_margin"
                />

            <Spinner
                android:id="@+id/universitySpinnerSettingsStud"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/campus_settings"
                android:layout_alignRight="@id/background_campus_settings"
                android:layout_marginRight="5dp"
                android:layout_marginTop="7dp"
                android:elevation="@dimen/activity_vertical_margin"
                />

            <TextView

                android:id="@+id/default_university"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default Campus"
                android:textSize="20sp"
                android:textColor="@color/darkest_blue"
                android:layout_below="@id/default_campus"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:elevation="@dimen/activity_vertical_margin"


                />

            <Spinner
                android:id="@+id/campusesSpinnerSettingsStud"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/default_campus"
                android:layout_alignRight="@id/background_campus_settings"
                android:layout_marginRight="5dp"
                android:layout_marginTop="7dp"
                android:elevation="@dimen/activity_vertical_margin"
                />

            <TextView
                android:id="@+id/other_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other settings"
                android:theme="@style/header2"
                android:textColor="@color/white"
                android:layout_below="@id/background_campus_settings"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"

                />

            <View
                android:background ="@drawable/border"
                android:id="@+id/background_other_settings"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="7dp"
                android:layout_below="@id/other_settings"
                android:alpha="0.3"
                android:elevation="@dimen/activity_vertical_margin"

                />
            <TextView
                android:id="@+id/notifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:textSize="20sp"
                android:textColor="@color/darkest_blue"
                android:layout_below="@id/other_settings"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:elevation="@dimen/activity_vertical_margin"

                />



            <Switch
                android:id="@+id/mySwitchStud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="14sp"
                android:textColor="@color/darkest_blue"
                android:layout_below="@id/other_settings"
                android:layout_toRightOf="@id/other_settings"
                android:text="Switch for notification"
                android:elevation="@dimen/activity_vertical_margin"/>

            <TextView
                android:id="@+id/switchStatusStud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/notifications"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:elevation="@dimen/activity_vertical_margin"/>

            <TextView
                android:id="@+id/language_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Language:"
                android:textSize="20sp"
                android:textColor="@color/darkest_blue"
                android:layout_below="@id/switchStatusStud"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:elevation="@dimen/activity_vertical_margin"
                />

            <Spinner
                android:id="@+id/languageSpinnerSettingsStud"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:entries="@array/settings_language"
                android:layout_toRightOf="@id/language_settings"
                android:layout_below="@id/switchStatusStud"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="2dp"
                android:elevation="@dimen/activity_vertical_margin"
                />


        </RelativeLayout>
    </ScrollView>


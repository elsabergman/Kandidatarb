<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello STS-sektionen!"
        android:theme="@style/org_header"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"

        />

    <TextView
        android:id="@+id/your_events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your upcoming events"
        android:layout_below="@+id/welcome"
        android:textColor="#fff"
        android:textSize="35sp"

        android:theme="@style/org_header"
        android:layout_marginTop="30dp"
        android:gravity="center"

        />
    <TextView
        android:id="@+id/description_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/your_events"
        android:text="Click on list row to show event description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        android:textColor="@color/white"
/>

    <TextView
        android:id="@+id/description_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_info"
        android:text="Can't see any events below? Create your first event in the toggle menu!"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="40dp"
        android:textSize="14sp"
        android:textColor="@color/white"
        />
    <ListView
        android:id="@+id/your_event_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_list"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/white"
        android:layout_marginBottom="10dp"

        />



<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/infoScroll"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <!--Background -->
        <ImageView
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background"
            android:scaleType="centerCrop" />


        <!--In this spinner we choose what campus we want to see information about*/ -->
        <Spinner
            android:id="@+id/campusesSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="20dp"
            android:entries="@array/campuses_array"
            />

        <TextView
            android:id="@+id/angstrom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello Ångström!"
            android:layout_below="@id/campusesSpinner"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:id="@+id/angstrom_map"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/angstrom_map"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/angstrom_text"
            android:layout_marginBottom="20dp"
            />


        <TextView
            android:id="@+id/itc_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello ITC!"
            android:layout_below="@id/angstrom_map"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:id="@+id/itc_map"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/angstrom_map"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/itc_text"
            android:layout_marginBottom="20dp"
            />



    </RelativeLayout>



</ScrollView>
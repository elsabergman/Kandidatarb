<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/infoScroll"
        >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <!--Background -->
        <!--<ImageView
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background"
            android:scaleType="centerCrop" />-->


        <!--In this spinner we choose what campus we want to see information about*/ -->

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello STS-sektionen!"
            android:theme="@style/org_header"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"

            />
        <Spinner
            android:id="@+id/campusesSpinner"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:entries="@array/campuses_array"
            android:background="@android:drawable/btn_dropdown"
            android:layout_below="@id/welcome"
            />

        <TextView
            android:id="@+id/angstrom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello Ångström!"
            android:layout_below="@id/campusesSpinner"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:id="@+id/angstrom_map"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/angstrom_map"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/angstrom_text"
            android:layout_marginBottom="20dp"
            />


        <TextView
            android:id="@+id/itc_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello ITC!"
            android:layout_below="@id/angstrom_map"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:id="@+id/itc_map"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/angstrom_map"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/itc_text"
            android:layout_marginBottom="20dp"
            />



    </RelativeLayout>
    </ScrollView>

    <include layout="@layout/app_bar_sliding_menu"
        android:layout_height="0dp"
        android:layout_width="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

</RelativeLayout>
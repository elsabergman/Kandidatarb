<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:alpha="0.3"
            android:background="#FFFFFFFF"/>

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_button"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:adjustViewBounds="true"
            android:maxWidth="35dp"
            android:maxHeight="35dp"

            />

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_toggle"
            android:layout_below="@+id/menu_icon"


            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:text="Anna Eriksson"
            android:layout_toRightOf="@+id/user_icon"
            android:layout_below="@+id/menu_icon"
            android:textColor="#FFFFFFFF"
            android:textSize="30sp"
            android:paddingTop="10dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location"
            android:text="Ångström"
            android:layout_toRightOf="@+id/user_icon"
            android:layout_below="@+id/username"
            android:textColor="#FFFFFFFF"
            android:textSize="20sp"
            />
        <View
            android:id="@+id/line1"
            android:layout_width="300dp"
            android:layout_height="3dp"
            android:background="#FFFFFFFF"
            android:layout_below="@+id/user_icon"
            />

        <ImageView
            android:id="@+id/my_events"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/my_events_toggle"
            android:layout_below="@+id/line1"
            android:adjustViewBounds="true"
            android:maxWidth="40dp"
            android:maxHeight="40dp"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calendar"
            android:textColor="#626f75"
            android:textSize="20sp"
            android:layout_toRightOf="@id/my_events"
            android:layout_above="@+id/line2"
            android:layout_marginBottom="15dp"
            />

        <View
            android:id="@+id/line2"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="#FFFFFFFF"
            android:layout_below="@+id/my_events"
            />

        <ImageView
            android:id="@+id/add_events"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_events_toggle"
            android:layout_below="@+id/my_events"
            android:adjustViewBounds="true"
            android:maxWidth="40dp"
            android:maxHeight="40dp"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add event"
            android:textColor="#626f75"
            android:textSize="20sp"
            android:layout_toRightOf="@id/add_events"
            android:layout_above="@+id/line3"
            android:layout_marginBottom="15dp"
            />
        <View
            android:id="@+id/line3"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="#FFFFFFFF"
            android:layout_below="@+id/add_events"
            />
        <ImageView
            android:id="@+id/campus_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/map_toggle"
            android:layout_below="@+id/add_events"
            android:adjustViewBounds="true"
            android:maxWidth="40dp"
            android:maxHeight="40dp"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Map"
            android:textColor="#626f75"
            android:textSize="20sp"
            android:layout_toRightOf="@id/campus_info"
            android:layout_above="@+id/line4"
            android:layout_marginBottom="15dp"
            />

        <View
            android:id="@+id/line4"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="#FFFFFFFF"
            android:layout_below="@+id/campus_info"
            />

        <ImageView
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/settings_toggle"
            android:layout_below="@+id/campus_info"
            android:adjustViewBounds="true"
            android:maxWidth="40dp"
            android:maxHeight="40dp"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="#626f75"
            android:textSize="20sp"
            android:layout_toRightOf="@id/settings"
            android:layout_above="@+id/line5"
            android:layout_marginBottom="15dp"
            />
        <View
            android:id="@+id/line5"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="#FFFFFFFF"
            android:layout_below="@+id/settings"
            />

        <ImageView
            android:id="@+id/support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/support_toggle"
            android:layout_below="@+id/settings"
            android:adjustViewBounds="true"
            android:maxWidth="40dp"
            android:maxHeight="40dp"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Support"
            android:textColor="#626f75"
            android:textSize="20sp"
            android:layout_toRightOf="@id/support"
            android:layout_below="@+id/line5"
            android:layout_marginTop="15dp"
            />

        <Button

            android:id="@+id/loginButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Log out"
            android:textColor="#032f3c"
            android:background="#fff"
            android:onClick="onClick"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="15dp"


            />


    </RelativeLayout>
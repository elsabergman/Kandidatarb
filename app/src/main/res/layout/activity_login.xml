        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:maxLines="1"
        />

    <!-- Password Label -->

    <EditText android:id="@+id/input_pwd"
        android:layout_width="300dp"
